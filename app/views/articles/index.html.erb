<% if !user_signed_in? %>
   <div class="jumbotron">
    <h1>Check out our UOB blog</h1>
    <p>Reviews, features, author interviews and article excerpts from the national daily and the Sunday book review. Registration required</p>
    <p><%= link_to "Sign Up to Write a Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
   </div>
<% end %>


<div class="row">
   <% @articles.each do |article| %>
    
    <div class="col - sn-6 col-md-3">
        <div class="thumbnail">
          <%= button_to 'Destroy',article, method: :delete, :onclick => "return confirm('Are you sure you want to delete this post?')" %>
          <%= link_to (image_tag article.image.url(:medium), class: 'image'), article %>
        </div>
    </div>
  <% end %>
</div>


<%= link_to 'New Article', new_article_path , class: "btn btn-success"%>
